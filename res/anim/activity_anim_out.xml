<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <alpha android:fromAlpha="1.0" android:toAlpha="0.3" android:duration="300"/>
    <scale 
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:fromXScale="1.0" android:toXScale="0.9"
        android:fromYScale="1.0" android:toYScale="0.9"
        android:pivotX="50%" android:pivotY="50%"
        android:fillAfter="false" android:duration="300"/>
    <translate
        android:fromXDelta="1" android:toXDelta="0.8"
        android:fromYDelta="1" android:toYDelta="1"
        android:fillAfter="false" android:duration="300"/>
</set>