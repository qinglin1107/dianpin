<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <alpha android:fromAlpha="0.3" android:toAlpha="1.0" android:duration="300"/>
    <scale 
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:fromXScale="0.95" android:toXScale="1"
        android:fromYScale="0.95" android:toYScale="1"
        android:pivotX="50%" android:pivotY="50%"
        android:fillAfter="false" android:duration="300"/>
    <translate
        android:fromXDelta="0.95" android:toXDelta="1"
        android:fromYDelta="1" android:toYDelta="1"
        android:fillAfter="false" android:duration="300"/>
</set>